{
  "uri": "system/schedule/index",
  "layout": "table",
  "title": "计划任务",
  "view": "layadmin::table",
  "styles": [],
  "scripts": [
    "admin/js/system/schedule/index.js"
  ],
  "components": {
    "search": {
      "attributes": {
        "class": "layui-form",
        "lay-filter": "schedule-index-search"
      },
      "items": [
        {
          "element": "input",
          "label": "执行命令",
          "attributes": {
            "type": "text",
            "class": "layui-input",
            "id": "command",
            "name": "command",
            "autocomplete": "off"
          }
        }
      ],
      "actions": [
        {
          "element": "button",
          "label": "查 询",
          "icon": "layui-icon layui-icon-search",
          "attributes": {
            "type": "submit",
            "class": "pear-btn pear-btn-primary pear-btn-md",
            "lay-submit": "",
            "lay-filter": "schedule-index-search-submit"
          }
        },
        {
          "element": "button",
          "label": "重 置",
          "icon": "layui-icon layui-icon-refresh",
          "attributes": {
            "type": "reset",
            "class": "pear-btn pear-btn-md"
          }
        }
      ]
    },
    "table": {
      "element": "table",
      "attributes": {
        "id": "system-schedule-index",
        "lay-filter": "system-schedule-index"
      },
      "config": {
        "elem": "#system-schedule-index",
        "url": "/api/schedules",
        "toolbar": "#system-schedule-index-toolbar",
        "height": "full-180",
        "limit": 15,
        "limits": [
          15,
          20,
          30,
          40,
          50,
          60,
          70,
          80,
          90,
          100
        ],
        "cols": [
          [
            {
              "field": "id",
              "title": "ID",
              "width": 80
            },
            {
              "field": "command",
              "title": "执行命令"
            },
            {
              "field": "parameters",
              "title": "参数"
            },
            {
              "field": "expression",
              "title": "执行间隔"
            },
            {
              "field": "description",
              "title": "描述"
            },
            {
              "field": "active",
              "title": "状态",
              "templet": "(function(d){ return d.active ? '<span class=\"layui-badge-dot layui-bg-green\"></span> 启用' : '<span class=\"layui-badge-dot\"></span> 停用'; })"
            },
            {
              "field": "timezone",
              "title": "时区"
            },
            {
              "field": "created_at",
              "title": "创建时间"
            },
            {
              "type": "action",
              "title": "操作",
              "toolbar": "#system-schedule-index-bar",
              "align": "left",
              "width": 120,
              "fixed": "right"
            }
          ]
        ]
      },
      "actions": [
        {
          "position": "toolbar",
          "element": "button",
          "label": "新增",
          "icon": "layui-icon layui-icon-add-1",
          "attributes": {
            "class": "pear-btn pear-btn-primary pear-btn-md",
            "lay-event": "add",
            "data-api-uri": "/api/schedules",
            "data-api-method": "post"
          }
        },
        {
          "position": "column",
          "element": "button",
          "label": "",
          "icon": "layui-icon layui-icon-edit",
          "attributes": {
            "class": "pear-btn pear-btn-primary pear-btn-sm",
            "lay-event": "edit",
            "data-field": "id",
            "data-api-uri": "/api/schedules/{id}",
            "data-api-method": "put"
          }
        },
        {
          "position": "column",
          "element": "button",
          "label": "",
          "icon": "layui-icon layui-icon-delete",
          "attributes": {
            "class": "pear-btn pear-btn-danger pear-btn-sm",
            "lay-event": "delete",
            "data-api-uri": "/api/schedules/{id}",
            "data-api-method": "delete"
          }
        }
      ]
    }
  }
}
